<?xml version="1.0" encoding="utf-8"?>
<manifest package="anthonynahas.com.autocallrecorder"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_profo_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="false"
        >
        <activity android:name=".activities.RecordsTestActivity"
                  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <!-- enable the search dialog to send searches to SearchableActivity
            a issue took here place: value has not be given as full package! Attention!-->
            <meta-data android:name="android.app.default_searchable"
                       android:value="anthonynahas.com.autocallrecorder.activities.SearchableActivity"/>
        </activity>

        <activity android:name=".activities.SettingsActivity"
                  android:screenOrientation="portrait" >
        </activity>

        <activity android:name="anthonynahas.com.autocallrecorder.activities.SearchableActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
        </intent-filter>
        <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
        </activity>

        <!--DROP BOX API CORE -->
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:configChanges="orientation|keyboard">
            <intent-filter>
                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-32fcvkt4b7ym4sv" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--DROP BOX API CORE -->

        <receiver
            android:name="anthonynahas.com.autocallrecorder.broadcasts.CallReceiver"
            android:exported="false">
            <intent-filter android:priority="1">
                <action android:name="android.intent.action.PHONE_STATE"/>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
                <action android:name="test"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="anthonynahas.com.autocallrecorder.broadcasts.DoneRecReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="autocallrecorder.intent.action.RECORD_DONE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service android:enabled="true"
                 android:exported="false"
                 android:name="anthonynahas.com.autocallrecorder.services.RecordService"/>
        <service android:exported="false"
                 android:enabled="true"
                 android:name="anthonynahas.com.autocallrecorder.services.FetchIntentService"/>

        <provider
            android:exported="false"
            android:authorities="anthonynahas.com.autocallrecorder.providers.RecordsContentProvider"
            android:name="anthonynahas.com.autocallrecorder.providers.RecordsContentProvider"/>
        <provider
            android:exported="false"
            android:authorities="anthonynahas.com.autocallrecorder.providers.RecentSuggestionProvider"
            android:name="anthonynahas.com.autocallrecorder.providers.RecentSuggestionProvider"/>
    </application>

</manifest>
